<Page
    x:Class="FireTestingApp_net8.Viewes.MainTestView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:FireTestingApp_net8.Services"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FireTestingApp_net8.Viewes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Окно тестирования"
    d:DesignHeight="640"
    d:DesignWidth="960"
    mc:Ignorable="d">

    <Page.Resources>
        <conv:IndexToBoolConverter x:Key="IndexToBoolConverter" />
    </Page.Resources>

    <Grid HorizontalAlignment="Stretch" Background="White">
        <TextBlock
            Height="128"
            Margin="10,148,10,0"
            VerticalAlignment="Top"
            FontSize="24"
            FontWeight="Bold"
            Foreground="Black"
            Text="{Binding QuestionText}"
            TextWrapping="Wrap" />
        <RadioButton
            x:Name="Option1"
            Margin="10,305,0,0"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            BorderBrush="Black"
            Content="{Binding AnswerContents[0]}"
            FontSize="20"
            GroupName="Answers"
            IsChecked="{Binding SelectedAnswerIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=0, Mode=TwoWay}" />
        <RadioButton
            x:Name="Option2"
            Margin="10,347,0,0"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            BorderBrush="Black"
            Content="{Binding AnswerContents[1]}"
            FontSize="20"
            GroupName="Answers"
            IsChecked="{Binding SelectedAnswerIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=1, Mode=TwoWay}" />
        <RadioButton
            x:Name="Option3"
            Margin="10,389,0,0"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            BorderBrush="Black"
            Content="{Binding AnswerContents[2]}"
            FontSize="20"
            GroupName="Answers"
            IsChecked="{Binding SelectedAnswerIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=2, Mode=TwoWay}" />
        <RadioButton
            x:Name="Option4"
            Margin="10,430,0,0"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            BorderBrush="Black"
            Content="{Binding AnswerContents[3]}"
            FontSize="20"
            GroupName="Answers"
            IsChecked="{Binding SelectedAnswerIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=3, Mode=TwoWay}" />
        <RadioButton
            x:Name="Option5"
            Margin="10,472,0,0"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            BorderBrush="Black"
            Content="{Binding AnswerContents[4]}"
            FontSize="20"
            GroupName="Answers"
            IsChecked="{Binding SelectedAnswerIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=4, Mode=TwoWay}" />
        <Button
            x:Name="NextButton"
            Width="218"
            Height="56"
            Margin="0,0,0,18"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Command="{Binding GoToNextQuestionEvent}"
            Content="ДАЛЕЕ" />
        <Rectangle
            Height="98.8"
            VerticalAlignment="Top"
            Fill="#FF194F9E"
            Stroke="#FF568FE2" />
        <TextBlock
            Margin="0,23,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White"
            TextAlignment="Center"
            TextWrapping="Wrap"><Run Text="КОМПЬЮТЕРНАЯ СИCТЕМА ТЕСТИРОВАНИЯ МЧС РОССИИ" /><LineBreak /><Run Text="ПО ПОЖАРНОЙ БЕЗОПАСНОСТИ" /></TextBlock>
        <Rectangle
            Width="80"
            Height="80"
            Margin="10,9,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Rectangle.Fill>
                <ImageBrush
                    ImageSource="/Assets/img/auto-891-1.png"
                    Stretch="UniformToFill"
                    TileMode="None" />
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock
            x:Name="QuestionIndexTB"
            Width="127"
            Margin="10,110,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="20"
            FontWeight="Bold"
            Foreground="#FF2575EA"
            Text="{Binding QuestionIndex}"
            TextAlignment="Center"
            TextWrapping="Wrap" />
        <Label
            x:Name="TimerLabel"
            Width="164"
            Margin="0,110,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Stretch"
            Content="{Binding TimeLeft}"
            FontSize="14" />
    </Grid>
</Page>
