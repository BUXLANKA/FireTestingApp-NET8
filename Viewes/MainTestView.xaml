<Page x:Class="FireTestingApp_net8.Viewes.MainTestView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FireTestingApp_net8.Viewes"
      xmlns:conv="clr-namespace:FireTestingApp_net8.Services"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="960"
      Title="Окно тестирования">

    <Page.Resources>
        <conv:IndexToBoolConverter x:Key="IndexToBoolConverter"/>
    </Page.Resources>

    <Grid Background="White" HorizontalAlignment="Stretch">
        <TextBlock Text="{Binding QuestionText}" TextWrapping="Wrap" FontSize="24" Foreground="Black" VerticalAlignment="Top" Margin="10,148,10,0" Height="128" FontWeight="Bold"/>
        <RadioButton x:Name="Option1" Content="{Binding AnswerContents[0]}" Margin="10,305,0,0" VerticalAlignment="Top" FontSize="20" BorderBrush="Black" VerticalContentAlignment="Center"
                     GroupName="Answers"
                     IsChecked="{Binding SelectedAnswerIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=0, Mode=TwoWay}"
                     />
        <RadioButton x:Name="Option2" Content="{Binding AnswerContents[1]}" Margin="10,347,0,0" VerticalAlignment="Top" FontSize="20" BorderBrush="Black" VerticalContentAlignment="Center"
                     GroupName="Answers"
                     IsChecked="{Binding SelectedAnswerIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=1, Mode=TwoWay}"
                     />
        <RadioButton x:Name="Option3" Content="{Binding AnswerContents[2]}" Margin="10,389,0,0" VerticalAlignment="Top" FontSize="20" BorderBrush="Black" VerticalContentAlignment="Center"
                     GroupName="Answers"
                     IsChecked="{Binding SelectedAnswerIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=2, Mode=TwoWay}"
                     />
        <RadioButton x:Name="Option4" Content="{Binding AnswerContents[3]}" Margin="10,430,0,0" VerticalAlignment="Top" FontSize="20" BorderBrush="Black" VerticalContentAlignment="Center"
                     GroupName="Answers"
                     IsChecked="{Binding SelectedAnswerIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=3, Mode=TwoWay}"
                     />
        <RadioButton x:Name="Option5" Content="{Binding AnswerContents[4]}" Margin="10,472,0,0" VerticalAlignment="Top" FontSize="20" BorderBrush="Black" VerticalContentAlignment="Center"
                     GroupName="Answers"
                     IsChecked="{Binding SelectedAnswerIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=4, Mode=TwoWay}"
                     />
        <Button Command="{Binding GoToNextQuestionEvent}" x:Name="NextButton" Content="ДАЛЕЕ" Height="56" Width="218" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,18"/>
        <Rectangle VerticalAlignment="Top" Height="98.8" Fill="#FF194F9E" Stroke="#FF568FE2"/>
        <TextBlock TextWrapping="Wrap" FontSize="20" FontWeight="Bold" TextAlignment="Center" Foreground="White" Margin="0,23,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"><Run Text="КОМПЬЮТЕРНАЯ СИCТЕМА ТЕСТИРОВАНИЯ МЧС РОССИИ"/><LineBreak/><Run Text="ПО ПОЖАРНОЙ БЕЗОПАСНОСТИ"/></TextBlock>
        <Rectangle Height="80" Width="80" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,9,0,0">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Assets/img/auto-891-1.png" TileMode="None" Stretch="UniformToFill"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock Text="{Binding QuestionIndex}" x:Name="QuestionIndexTB" TextWrapping="Wrap" FontSize="20" FontWeight="Bold" TextAlignment="Center" Foreground="#FF2575EA" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,110,0,0" Width="127"/>
        <Label Content="{Binding TimeLeft}" x:Name="TimerLabel" HorizontalContentAlignment="Right" VerticalContentAlignment="Stretch" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,110,10,0" Width="164" FontSize="14"/>

    </Grid>
</Page>
