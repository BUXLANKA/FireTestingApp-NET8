<Page
    x:Class="FireTestingApp_net8.Viewes.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FireTestingApp_net8.Viewes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FireTestingApp_net8.ViewModels"
    Title="Авторизация"
    d:DesignHeight="640"
    d:DesignWidth="960"
    mc:Ignorable="d">

    <Grid Background="White">
        <Label
            Width="344"
            Margin="0,150,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Content="АВТОРИЗАЦИЯ"
            FontSize="36"
            FontWeight="Bold" />
        <Label
            Margin="0,264,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Логин:"
            FontSize="16" />
        <TextBox
            Width="244"
            Height="32"
            Margin="0,300,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="18"
            Text="{Binding Login}"
            TextWrapping="Wrap" />
        <Label
            Margin="0,343,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Пароль:"
            FontSize="16" />
        <PasswordBox
            x:Name="PasswordInput"
            Width="244"
            Height="31"
            Margin="0,379,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="18"
            PasswordChanged="PasswordBox_PasswordChanged" />
        <Button
            Width="244"
            Height="52"
            Margin="0,440,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Command="{Binding EnterEvent}"
            Content="ВОЙТИ"
            FontSize="16" />
        <Rectangle
            Height="98.8"
            VerticalAlignment="Top"
            Fill="#FF194F9E"
            Stroke="#FF568FE2" />
        <TextBlock
            Margin="0,23,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White"
            TextAlignment="Center"
            TextWrapping="Wrap"><Run Text="КОМПЬЮТЕРНАЯ СИCТЕМА ТЕСТИРОВАНИЯ МЧС РОССИИ" /><LineBreak /><Run Text="ПО ПОЖАРНОЙ БЕЗОПАСНОСТИ" /></TextBlock>
        <Rectangle
            Width="80"
            Height="80"
            Margin="10,9,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Rectangle.Fill>
                <ImageBrush
                    ImageSource="/Assets/img/auto-891-1.png"
                    Stretch="UniformToFill"
                    TileMode="None" />
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</Page>
