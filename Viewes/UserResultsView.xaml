<Page x:Class="FireTestingApp_net8.Viewes.UserResultsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FireTestingApp_net8.Viewes"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="960"
      Title="UserResultsView">

    <Grid Background="White">
        <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="36" FontWeight="Bold" VerticalAlignment="Top" Margin="0,141,0,0"><Run Language="ru-ru" Text="РЕЗУЛЬТАТЫ ТЕСТА"/></TextBlock>
        <TextBlock Text="{Binding ResultText}" TextWrapping="Wrap" TextAlignment="Center" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Width="507"/>
        <Button Command="{Binding OpenFeedBakcPageEvent}" Content="Форма обратной связи" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="43" Width="344" Margin="0,0,0,45" FontSize="16"/>
        <Rectangle VerticalAlignment="Top" Height="98.8" Fill="#FF194F9E" Stroke="#FF568FE2"/>
        <TextBlock TextWrapping="Wrap" FontSize="20" FontWeight="Bold" TextAlignment="Center" Foreground="White" Margin="0,23,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"><Run Text="КОМПЬЮТЕРНАЯ СИCТЕМА ТЕСТИРОВАНИЯ МЧС РОССИИ"/><LineBreak/><Run Text="ПО ПОЖАРНОЙ БЕЗОПАСНОСТИ"/></TextBlock>
        <Rectangle Height="80" Width="80" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,9,0,0">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Assets/auto-891-1.png" TileMode="None" Stretch="UniformToFill"/>
            </Rectangle.Fill>
        </Rectangle>
        <Button Command="{Binding ContinueAndExitEvent}" Content="Завершить и выйти" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="43" Width="344" Margin="0,0,0,120" FontSize="16"/>

    </Grid>
</Page>
