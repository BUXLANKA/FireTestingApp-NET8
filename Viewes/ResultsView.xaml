<Page
    x:Class="FireTestingApp_net8.Viewes.ResultsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FireTestingApp_net8.Viewes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Результаты теста"
    d:DesignHeight="640"
    d:DesignWidth="960"
    mc:Ignorable="d">

    <Grid Background="White">
        <TextBlock
            Margin="0,141,0,0"
            VerticalAlignment="Top"
            FontSize="36"
            FontWeight="Bold"
            TextAlignment="Center"
            TextWrapping="Wrap"><Run Language="ru-ru" Text="РЕЗУЛЬТАТЫ ТЕСТА" /></TextBlock>
        <TextBlock
            x:Name="ResultLB"
            Width="507"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            Text="{Binding ResultMessage}"
            TextAlignment="Center"
            TextWrapping="Wrap" />
        <Button
            x:Name="FeedBackFormButton"
            Width="344"
            Height="43"
            Margin="0,0,0,45"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Command="{Binding OpenFeedbackPageEvent}"
            Content="Форма обратной связи"
            FontSize="16" />
        <Rectangle
            Height="98.8"
            VerticalAlignment="Top"
            Fill="#FF194F9E"
            Stroke="#FF568FE2" />
        <TextBlock
            Margin="0,23,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White"
            TextAlignment="Center"
            TextWrapping="Wrap"><Run Text="КОМПЬЮТЕРНАЯ СИCТЕМА ТЕСТИРОВАНИЯ МЧС РОССИИ" /><LineBreak /><Run Text="ПО ПОЖАРНОЙ БЕЗОПАСНОСТИ" /></TextBlock>
        <Rectangle
            Width="80"
            Height="80"
            Margin="10,9,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Rectangle.Fill>
                <ImageBrush
                    ImageSource="/Assets/img/auto-891-1.png"
                    Stretch="UniformToFill"
                    TileMode="None" />
            </Rectangle.Fill>
        </Rectangle>
        <Button
            Width="344"
            Height="43"
            Margin="0,0,0,120"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Command="{Binding ContinueAndExitEvent}"
            Content="Завершить и выйти"
            FontSize="16" />

    </Grid>
</Page>
